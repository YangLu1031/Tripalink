<div class="container">
  <div class="row profile">
    <div class="col-md-3">
      <div class="profile-sidebar">
        <!-- SIDEBAR USERPIC -->
        <div class="profile-userpic">
          <% avatar = @expert.avatar? ? @expert.avatar.url : "default_avatar.png" %>
          <%= image_tag avatar, class: "img-responsive", alt: "" %>
        </div>
        <div class="profile-usertitle">
          <div class="profile-usertitle-name">
            <%= @expert.name %>
          </div>
          <div class="profile-usertitle-job">
            Auto Genius
          </div>
        </div>
        <!-- END SIDEBAR BUTTONS -->
        <!-- SIDEBAR MENU -->
        <div class="profile-usermenu">
          <ul class="nav nav-tabs nav-stacked">
            <li class="active">
              <a href="#profile" data-toggle="tab">
                <i class="glyphicon glyphicon-user"></i>
                Profile</a>
            </li>
            <li>
              <a href="#appointment-types" data-toggle="collapse">
                <i class="glyphicon glyphicon-calendar"></i>
                Appointments </a>
            </li>
            <ul class="subnav nav nav-tabs nav-stacked collapse" id="appointment-types">
              <li>
                <%= link_to "Inspection", appointments_expert_path(current_expert, type: Appointment::TYPE_SELL),
                            data: { toggle: "tab", toggle_dest: "appointments" }, class: "subnavtab", remote: true %>
              </li>
              <li>
                <%= link_to "Test Drive", appointments_expert_path(current_expert, type: Appointment::TYPE_TEST_DRIVE),
                            data: { toggle: "tab", toggle_dest: "appointments" }, class: "subnavtab", remote: true %>
              </li>
              <li>
                <%= link_to "Delivery", appointments_expert_path(current_expert, type: Appointment::TYPE_DELIVERY),
                            data: { toggle: "tab", toggle_dest: "appointments" }, class: "subnavtab", remote: true %>
              </li>
            </ul>
            <li>
              <a href="#reports" data-toggle="collapse">
                <i class="fa fa-folder"></i>
                Reports </a>
            </li>
            <ul class="subnav nav nav-tabs nav-stacked collapse" id="reports">
              <li>
                <%= link_to "New Reports", reports_expert_path(current_expert, type: Car::STATUS_PRE_INSPECTED_KEY),
                            data: { toggle: "tab", toggle_dest: "reports" }, class: "subnavtab", remote: true %>
              </li>
              <li>
                <%= link_to "Change Reports", reports_expert_path(current_expert, type: Car::STATUS_INSPECTED_KEY),
                            data: { toggle: "tab", toggle_dest: "reports" }, class: "subnavtab", remote: true %>
              </li>
            </ul>
            <li>
              <li>
                <%= link_to editAvailableTime_expert_path(current_expert) do %>
                  <i class="fa fa-clock-o"></i> Schedule Work Time
                <% end %>
              </li>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="tab-content">
        <div class="tab-pane fade active in" id="profile">
          <%= render partial: "expert_profile" %>
        </div>
        <div class="tab-pane fade" id="appointments">
        </div>
    </div>
  </div>
</div>
