<div class="container">
  <% m = @car.car_model %>
  <h1><%= m.year %> <%= m.make %> <%= m.model %></h1>
  <div class="row">
    <%= form_for(@car) do |f| %>
    <ul class="timeline">
      <li>
        <!-- the section about car's basic information -->
        <%= render partial: 'edit_basic_info', locals: { form: f } %>
      </li>
      <li>
        <!-- the section about car's colors -->
        <%= render partial: 'edit_car_colors', locals: { form: f } %>
      </li>
      <li>
        <!-- the section about car's features -->
        <%= render partial: 'edit_car_features', locals: { form: f } %>
      </li>
      <li>
        <!-- the section about car's checklist -->
        <%= render partial: 'edit_car_checklist', locals: { form: f } %>
      </li>
    </ul>
  </div>
  <div class="row report-action-btns">
    <div class="col-md-offset-2 col-md-2">
      <%= link_to "Upload car picture", car_car_pictures_path(@car), class: "btn btn-info btn-block btn-outline" %>
    </div>
    <div class="col-md-offset-1 col-md-2">
      <%= f.submit "submit", class: "btn btn-success btn-block btn-outline " %>
    </div>
    <div class="col-md-offset-1 col-md-2">
      <%= link_to "Cancel", :back, class: "btn btn-danger btn-block btn-outline" %>
    </div>
  </div>
  <% end %>
</div>

